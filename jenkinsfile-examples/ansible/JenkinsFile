pipeline {
    agent none
    stages {
        stage('Staging'){
            agent { label 'docker' }
            steps {
                checkout scm
                script {
                    sh 'sudo apt-get update'
                    sh 'sudo apt-get -y install libssl-dev'
                    sh 'which -a python | xargs -I {} sh -c "ls -1 {} && {} --version"'
                    sh 'which -a pip | xargs -I {} sh -c "ls -1 {} && {} --version"'
                    sh '/usr/local/bin/pip install -U pip setuptools wheel'
                    sh '/usr/local/bin/pip install -Uv m2crypto'
                    sh '/usr/local/bin/pip install -r ./jenkinsfile-examples/ansible/ansible25.requirements'
                    // sh 'pip install ansible==2.5.2'
                    sh 'ansible --version'
                }
            }
        }
    }
}
