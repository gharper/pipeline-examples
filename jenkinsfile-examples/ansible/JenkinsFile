pipeline {
    agent none
    stages {
        stage('Staging'){
            agent { label 'docker' }
            steps {
                checkout scm
                script {
                    sh 'sudo apt-get update'
                    sh 'DEBIAN_FRONTEND="noninteractive" sudo apt-get -q install -y -o Dpkg::Options::="--force-confnew"  --no-install-recommends libssl-dev'
                    sh 'pip install -r ./jenkinsfile-examples/ansible/ansible25.requirements'
                    sh 'ansible -version'
                }
            }
        }
    }
}
